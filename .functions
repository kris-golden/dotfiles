}

# Make colors for bash prompts.
make_color () {
   local newColor="\\e[38;2;$1;$2;$3"'m'
   echo -e "$newColor"
}
make_bgcolor () {
   local newColor="\\e[48;2;$1;$2;$3"'m'
   echo -e "$newColor"
}
reset_color () {
	local nullColor="\\e[0m"
	echo -e "$nullColor"
}


make8_color () {
   local newColor="\\e[38;5;$1"'m'
   echo -e "$newColor"
}
make8_bgcolor () {
   local newColor="\\e[48;5;$1"'m'
   echo -e "$newColor"

}

